<!DOCTYPE html>
<html>
<head>
  <title>Machine Enquiry | PrintVision</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include("partials/navbar") %>

<div class="container my-5">
  <h3 class="mb-4">Machine Enquiry</h3>

  <form method="POST" action="/send-enquiry">

    <div class="row g-3">

      <div class="col-md-6">
        <label>Brand</label>
        <input class="form-control" name="brand" value="<%= brand %>" readonly>
      </div>

      <div class="col-md-6">
        <label>Machine Interested In</label>
        <input class="form-control" name="machine" value="<%= machine %>" readonly>
      </div>

      <div class="col-md-6">
        <label>Expected Budget</label>
        <select class="form-control" name="budget">
          <option>Below 5 Lakhs</option>
          <option>5 – 10 Lakhs</option>
          <option>10 – 25 Lakhs</option>
          <option>Above 25 Lakhs</option>
        </select>
      </div>

      <div class="col-md-6">
        <label>Application</label>
        <input class="form-control" name="application"
               placeholder="Signage / Textile / Photo / CAD">
      </div>

      <div class="col-md-6">
        <label>Your Name</label>
        <input class="form-control" name="name" required>
      </div>

      <div class="col-md-6">
        <label>Phone</label>
        <input class="form-control" name="phone" required>
      </div>

      <div class="col-12">
        <label>Additional Requirements</label>
        <textarea class="form-control" name="message" rows="4"></textarea>
      </div>

    </div>

    <button class="btn btn-primary mt-4">Submit Enquiry</button>
  </form>
</div>

<%- include("partials/footer") %>

</body>
</html>
